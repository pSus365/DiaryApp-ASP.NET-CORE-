@model List<DiaryEntry>

<div class="container" >
    <div class="row" pt-4>
        <div class="col-6">
            <a class="btn btn-primary" class="nav-link text-light" 
            asp-area="" asp-controller="DiaryEntries" asp-action="Create"> Create New Diary Entry </a>
            </div>
        <div class="col-6 text-end"> 
            <h2>Diary Entries</h2>
        </div>
    </div>

</div>


<div class="table-responsive">
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Title</th>
                <th>Content</th>
                <th>Date</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach(var entry in Model)
            {
                <tr>
                    <td>@entry.Title</td>
                    <td>@entry.Content</td>
                    <td>@entry.Created</td>
                    <td>
                        <a asp-controller="DiaryEntries" asp-action="Edit" asp-route-id="@entry.Id" class="btn btn-primary btn-sm">Edit</a>
                    </td>

                    <td>
                        <a asp-controller="DiaryEntries" asp-action="" class="btn btn-danger btn-sm">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>